<h1>お支払い方法・お届け先の確認</h1>
<div class="container">
  <div class="row md-2">
    <div class="col-md-12">
      <table class="table table-striped">


        <tr>
          <td></td>
          <td>姓</td>
          <td>名</td>
          <td>セイ</td>
          <td>メイ</td>
          <td>郵便番号</td>
          <td>送付先</td>
          <td>電話番号</td>
          <td></td>
        </tr>

        # how to go index page
      <%= form_with url: users_orders_path, method: :get do |f|%>
        <tr>
          <th></th>
          <td><%= @user.first_name %></td>
          <% f.hidden_field :first_name, value:@user.first_name %>
          <td><%= @user.last_name %></td>
          <% f.hidden_field :last_name, value:@user.last_name %>
          <td><%= @user.first_name_kana %></td>
          <% f.hidden_field :first_name_kana, value:@user.first_name_kana %>
          <td><%= @user.last_name_kana %></td>
          <% f.hidden_field :last_name_kana, value:@user.last_name_kana %>
          <td><%= @user.postcode %></td>
          <% f.hidden_field :postcode, value:@user.postcode %>
          <td><%= @user.address %></td>
          <% f.hidden_field :address, value:@user.address %>
          <td><%= @user.phone_number %></td>
          <% f.hidden_field :phone_number, value:@user.phone_number %>
          <td><%= f.radio_button(:select_address, -1) %></td>
        </tr>

        <% @addresses.each do |address| %>
        <tr>
          <th></th>
          <td><%= address.first_name %></td>
          <%= f.hidden_field :first_name, value:address.first_name %>
          <td><%= address.last_name %></td>
          <%= f.hidden_field :last_name, value:address.last_name %>
          <td><%= address.first_name_kana %></td>
          <%= f.hidden_field :first_name_kana, value:address.first_name_kana %>
          <td><%= address.last_name_kana %></td>
          <%= f.hidden_field :last_name_kana, value:address.last_name_kana %>
          <td><%= address.postcode %></td>
          <%= f.hidden_field :postcode, value:address.postcode %>
          <td><%= address.address %></td>
          <%= f.hidden_field :address, value:address.address %>
          <td><%= address.phone_number %></td>
          <%= f.hidden_field :phone_number, value:address.phone_number %>
          <td><%= f.radio_button(:select_address, address.id) %></td>
        </tr>
        <% end %>

      </table>

       <table class="table table-striped">
        <h1>新しく住所を追加する</h1>
        <tr>
         <td></td>
         <td><%= f.text_field :first_name, autofocus: true, autocomplete: "名前"  %></td>
         <td><%= f.text_field :last_name, autofocus: true, autocomplete: "名前" %></td>
         <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "名前" %></td>
         <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "名前" %></td>
         <td><%= f.text_field :postcode, autofocus: true, autocomplete: "郵便番号" %></td>
         <td><%= f.text_field :address, class: "form-control", autofocus: true, autocomplete: "住所" %></td>
         <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %></td>
         <td><%= f.radio_button(:select_address, 0) %></td>
        </tr>
       </table>
       <%= f.submit "次へ" %>
    <% end %>
    </div>
  </div>
</div>

