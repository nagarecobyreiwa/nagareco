<h2>ログイン情報編集<!-- <%= resource_name.to_s.humanize %>--></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="container">
    <div class="panel panel-default">
          <div class="panel-body">
            <div class="form-group">
              <!--<%= f.label :email %><br />-->
              <h5>新しいメールアドレス(変更しない場合はそのままにしてください)</h5>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="panel-body">
          <div class="form-group">
              <!--<%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />-->
              <h5>新しいパスワード(変更しない場合は空白のままにしてください)</h5>
              <%= f.password_field :password %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> 文字以上入力してください</em>
              <% end %>
          </div>

        <div class="form-group">
          <!--<%= f.label :password_confirmation %><br />-->
          <h5>新しいパスワードをもう一度入力してください</h5>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <!--<%= f.label :current_password %>-->
           <h5>現在のパスワード</h5>
           <i>(変更を確認するために、現在のパスワードを入力してください)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
      </div>&nbsp;
        <div class="actions">
          <%= f.submit "ログイン情報を編集する", class: "btn btn-primary" %>
          <%= link_to "編集を取り消す" , users_mypage_index_path, class: "btn btn-warning" %>
        </div>
      <% end %>
  </div>
</div>
