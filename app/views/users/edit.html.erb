<h1>あなたのアドレスです。</h1>

<h1>会員情報</h1>
<table class="table">
 <tr>
  <th>苗字<%= @user.first_name %>名前<%= @user.last_name %>
    セイ<%= @user.first_name_kana %>メイ<%= @user.last_name_kana %></th>
 </tr>
 <tr>
  <th>郵便番号<%= @user.postcode %>送付先<%= @user.address %></th>
 </tr>
 <tr>
  <th>電話番号<%= @user.phone_number %></th>
 </tr>
</table>

<div>
 <%= link_to "アドレス情報編集", edit_address_user_path(@user.id) %>
</div>

<h1>ログイン情報編集</h1>

<table class="table">
 <tr>
  <th>メールアドレス<%= @user.email %></th>
 </tr>
