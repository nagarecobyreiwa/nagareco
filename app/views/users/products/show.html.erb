  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

      <!--Grid row-->
      <div class="row wow fadeIn">
        <!--Grid column-->
        <div class="col-md-6 mb-4">
          <%= attachment_image_tag @product, :image, :fill, 250, 250, format: 'jpeg'%>
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <!--Content-->
          <div class="p-4">

            <div class="mb-3">
              <a href="">
                <span class="badge purple mr-1"><%= @product.genre.name %></span>
              </a>
              <a href="">
                <span class="badge blue mr-1"><%= @product.label.name %></span>
              </a>
            </div>

            <p class="lead">
              <h3 class="mb-0"><%= @product.name %></h3>
              <h1 class="mb-0"><%= @product.artist.name %></h1>
            </p>
            <% @product.disks.each do |disk| %>
            <p class="lead font-weight-bold"><%= disk.name %></p>
              <% disk.songs.each do |song| %>
                <p>
                  <%= song.name %>
                  <%= song.time.strftime("%H:%M") %>
                </p>
              <% end %>
            <% end %>
            <p><%= @product.stock %>枚</p>
            <p>￥ <%= @product.price %></p>

            <form class="d-flex justify-content-left">
              <!-- Default input -->
              <input type="number" value="2" aria-label="Search" class="form-control" style="width: 100px">
              <%= link_to users_cart_items_path(product: {id: @product.id}),method: :post do %>
                <button class="btn btn-primary btn-md my-0 p" type="submit">Add to cart
              <% end %>

                <i class="fas fa-shopping-cart ml-1"></i>
              </button>
            </form>
          </div>
          <!--Content-->

        </div>
        <!--Grid column-->

      </div>
    </div>
  </main>
  <!--Main layout-->
</body>
</html>
