<div style="padding-top:100px;">
<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">会員情報</div>
		<div class="panel-body">
			<table class="table">
				 <tr>
				   <th>名前&nbsp;<%= @user.first_name %><%= @user.last_name %>&nbsp;
				    (<%= @user.first_name_kana %><%= @user.last_name_kana %>)</th>
				 </tr>
				 <tr>
				   <th>郵便番号&nbsp;<%= @user.postcode %></th>
				</tr>
				   <tr><th>送付先&nbsp;<%= @user.address %></th></tr>
				 <tr>
				   <th>電話番号&nbsp;<%= @user.phone_number %></th>
				 </tr>
			</table>

			<div>
				<%= link_to "戻る" , users_mypage_index_path, class: "btn btn-warning" %>
				<%= link_to "アドレス情報編集", edit_users_mypage_path(@user.id), class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>
</div>

<div style="padding-top:50px;">
<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">ログイン情報編集</div>
		<div class="panel-body">
			<table class="table">
			 <tr>
			  <th>メールアドレス<%= @user.email %></th>
			 </tr>
			<!-- パスワードの表示は不可 -->
			</table>

			 <div>

			  <%= link_to "戻る" , users_mypage_index_path, class: "btn btn-warning" %>
			  <%= link_to "ログイン情報編集", edit_user_registration_path, class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>
</div>
