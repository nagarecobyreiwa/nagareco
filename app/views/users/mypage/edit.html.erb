<div style="padding:50px;">
 <h2>登録情報編集</h2>
	<div class="container">
		<div class="card">
			<div class="card-body">
			 <%= form_for(@user, url: users_mypage_path) do |f| %>
					<h4>氏名</h4>
				<div class="form-inline">
					<div class="form-group">
					<h5>姓</h5>&nbsp;&nbsp;
					 <%= f.text_field :first_name, autofocus: true, autocomplete: "名前"  %>&nbsp;
					</div>
					<div class="form-group">&nbsp;
					<h5>名</h5>&nbsp;
					 <%= f.text_field :last_name, autofocus: true, autocomplete: "名前" %>
					</div>
				</div>&nbsp;&nbsp;
				  <h4>フリガナ</h4>
				<div class="form-inline">
				  <div class="form-group">
					<h6>セイ</h6>
					 <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "名前" %>&nbsp;
				  </div>
				  <div class="form-group">
					<h6>メイ</h6>
					 <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "名前" %>
				  </div>
				</div>&nbsp;&nbsp;
				<div class="form-group">
				  <h4>郵便番号</h4>
					 <%= f.text_field :postcode, autofocus: true, autocomplete: "郵便番号" %>
				</div>
				<div class="form-group">
				  <h4>送付先</h4>
					 <%= f.text_field :address, class: "form-control", autofocus: true, autocomplete: "住所" %>
				</div>
				<div class="form-group">
				  <h4>電話番号</h4>
					 <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
				</div>

				<br>
					<div class="text-center">
					  <%= f.submit '登録情報を編集する', class: "btn btn-primary" %>
					  <%= link_to "編集を取り消す" , users_mypage_path(current_user.id), class: "btn btn-warning" %>
					</div>
				</br>

				<% end %>

				<% if @user.errors.any? %>
					<div id=“error_explanation” class=“alert alert-danger”>
						<ul>
							<% @user.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
