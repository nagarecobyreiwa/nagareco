<%= render 'admins/layouts/sidebar' %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <br>
      <h1>新しいジャンル追加</h1>
      <br>
      <%= form_for(@genre, url: admins_genres_path) do |f| %>
         <h4>ジャンル名</h4>
         <%= f.text_field :name %>
         <%= f.submit '登録' %>
      <% end %>
      <br>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>id</th>
              <th>ジャンル名</th>
              <th>アクション</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <th><%= genre.id %></th>
                <td><%= genre.name %></td>
                <td><%= link_to 'Edit', edit_admins_genre_path(genre) %>
                  | <%= link_to 'Delete', admins_genre_path(genre), method: :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
