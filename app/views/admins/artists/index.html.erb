<%= render 'admins/layouts/sidebar' %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <br>
      <h1>新しいアーティスト追加</h1>
      <br>
      <%= form_for(@artist, url: admins_artists_path) do |f| %>
         <%= flash[:notice] %>
         <h4>アーティスト名</h4>
         <%= f.text_field :name %>
         <%= f.submit '登録' %>
      <% end %>
      <br>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>id</th>
              <th>アーティスト名</th>
              <th>アクション</th>
            </tr>
          </thead>
          <tbody>
            <% @artists.each_with_index do |artist, i| %>
              <tr>
                <th><%= i + 1 %></th>
                <td><%= artist.name %></td>
                <td><%= link_to 'Edit', edit_admins_artist_path(artist) %>
                  | <%= link_to 'Delete', admins_artist_path(artist), method: :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
