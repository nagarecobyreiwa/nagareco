<%= render 'admins/layouts/sidebar' %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<h1>登録情報編集</h1>
<div class="container">
	<div class="panel panel-default">
		<div class="panel-body">
		 <%= form_for(@user, url: admins_user_path) do |f| %>
			<div class="form-inline">
				<h3>氏名</h3>
				<div class="form-group">
				<h4>姓</h4>
				 <%= f.text_field :first_name, autofocus: true, autocomplete: "名前"  %>&nbsp;
				</div>
				<div class="form-group">
				<h4>名</h4>
				 <%= f.text_field :last_name, autofocus: true, autocomplete: "名前" %>
				</div>
			</div>
			<div class="form-inline">
			  <h3>フリガナ</h3>
			  <div class="form-group">
				<h4>セイ</h4>
				 <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "名前" %>&nbsp;
			  </div>
			  <div class="form-group">
				<h4>メイ</h4>
				 <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "名前" %>
				</div>
			</div>
			<h3>郵便番号</h3>
			 <%= f.text_field :postcode, autofocus: true, autocomplete: "郵便番号" %>

			<h3>送付先</h3>
			 <%= f.text_field :address, class: "form-control", autofocus: true, autocomplete: "住所" %>

			<h3>電話番号</h3>
			 <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>


			<br><%= f.submit '登録情報を編集する', class: "btn btn-primary" %></br>

			<% end %>
      <%= link_to "編集を取り消す" , admins_user_path(@user.id), class: "btn btn-warning" %>
		</div>
	</div>
</div>
