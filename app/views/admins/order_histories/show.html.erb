<%= render 'admins/layouts/sidebar' %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
  <h1>購入履歴</h1>

    <table class="table">
    	<thead calss="thead-dark">
    		<tr>
    			<th>画像</th>
    			<th>商品名</th>
    			<th>価格</th>
    			<th>数量</th>
          <th>小計</th>
    		</tr>
    	</thead>
    	<tbody>
        <% @order.order_products.each do |order_product| %>
      		<tr>
      			<th><%= attachment_image_tag order_product.product, :image, :fill, 100, 100, format: 'jpeg'%></th>
      			<td><%= order_product.product.name %></td>
      			<td><%= order_product.price %></td>
      			<td><%= order_product.quantity %></td>
            <td><%= order_product.product.price.to_i  * order_product.quantity.to_i %></td>
      		</tr>
        <% end %>
      </tbody>
    </table>

    <table class="table">
      <thead calss="thead-dark">
        <tr>
    			<th>郵便番号</th>
    			<th>住所</th>
    			<th>名前</th>
    			<th>商品合計</th>
          <th> </th>
    		</tr>
    	</thead>
    	<tbody>
        <tr>
          <td><%= @order.postcode %></td>
          <td><%= @order.address  %></td>
          <td><%= @order.shipname_first %>    <%= @order.shipname_last %> 様</td>
          <td>合計金額 ¥ <%= @order.total_price %> </td>
          <td>
            <% if @order.delivery == 0 %>
              <%= link_to admins_delivery_path(@order),method: :patch do %>
                <button class="btn btn-dafault" type="submit" ><h3>発送する</h3>
              <% end %>
            <% elsif @order.delivery == 1 %>
               <h3 style="color: red;">発送中</h3>
            <% elsif @order.delivery == 2 %>
                <h3 style="color: navy;">発送完了</h3>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>

    </div>
</main>
