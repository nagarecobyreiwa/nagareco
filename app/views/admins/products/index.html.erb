<%= render 'admins/layouts/sidebar' %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">

<h3>商品一覧</h3>

<table class="table table-striped">
	<thead>
		<tr>
			<th>No.</th>
			<th>画像</th>
			<th>商品名</th>
      <th>在庫数</th>
      <th>価格</th>
      <th>販売ステータス</th>
      <th></th>
		</tr>
	</thead>
	<tbody>
    <% @products.each_with_index do |product, i| %>
		  <tr>
			  <th><%= i + 1 %></th>
        <td><%= attachment_image_tag  product, :image, :fill, 70,70, format: 'jpeg',fallback: "no-image.jpg" %></td>
        <td><%= product.name %></td>
        <td><%= product.stock %></td>
			  <td><%= product.price %></td>
        <td>
				<% if product.on_sale == true %>
				  販売
					<% else product.on_sale == false %>
					未販売
				<% end %>
				</td>
			  <td><%= link_to 'Edit', edit_admins_product_path(product) %>
          | <%= link_to 'Delete', admins_product_path(product), method: :delete %>
        </td>
		  </tr>
    <% end %>
	</tbody>
</table>
</main>
</div>
</div>
