<%= render 'admins/layouts/sidebar' %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <br>
      <h1>新しいレーベル追加</h1>
      <br>
      <%= form_for(@label, url: admins_labels_path) do |f| %>
        <%= flash[:notice] %>
         <h4>レーベル名</h4>
         <%= f.text_field :name %>
         <%= f.submit '登録' %>
      <% end %>
      <br>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>id</th>
              <th>レーベル名</th>
              <th>アクション</th>
            </tr>
          </thead>
          <tbody>
            <% @labels.each_with_index do |label , i| %>
              <tr>
                <th><%= i + 1 %></th>
                <td><%= label.name %></td>
                <td><%= link_to 'Edit', edit_admins_label_path(label) %>
                  | <%= link_to 'Delete', admins_label_path(label), method: :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
